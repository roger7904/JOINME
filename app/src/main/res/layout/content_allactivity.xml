<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="453dp"
        android:layout_height="183dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editsuffer"
            android:layout_width="213dp"
            android:layout_height="45dp"
            android:layout_marginStart="91dp"
            android:layout_marginLeft="91dp"
            android:layout_marginTop="82dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/outside"
            android:inputType="text" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="104dp"
            android:layout_height="127dp">

            <Button
                android:id="@+id/button16"
                android:layout_width="45dp"
                android:layout_height="48dp"
                android:layout_marginTop="82dp"
                android:layout_marginEnd="59dp"
                android:layout_marginRight="59dp"
                android:background="@drawable/p5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="413dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <Button
            android:id="@+id/activitybtn"
            android:layout_width="80dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/p2"
            android:onClick="onClick"
            android:text="@string/activity"
            android:textSize="16dp" />

        <Button
            android:id="@+id/joinbtn"
            android:layout_width="82dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/selectactbtn"
            android:text="@string/join"
            android:onClick="onClick"
            android:textSize="16dp" />

        <Button
            android:id="@+id/holdonbtn"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selectactbtn"
            android:text="@string/holdon"
            android:onClick="onClick"
            android:textSize="16dp" />

        <Button
            android:id="@+id/nearactbtn"
            android:layout_width="69dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selectactbtn"
            android:text="@string/nearact"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="411dp"
        android:layout_height="105dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <Button
            android:id="@+id/ballbtn"
            android:layout_width="66dp"
            android:layout_height="43dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="454dp"
            android:text="@string/ballsort" />

        <Button
            android:id="@+id/eatbtn"
            android:layout_width="66dp"
            android:layout_height="43dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="454dp"
            android:text="@string/eating" />

        <Button
            android:id="@+id/viewbtn"
            android:layout_width="66dp"
            android:layout_height="43dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="454dp"
            android:text="@string/information" />

        <Button
            android:id="@+id/tripbtn"
            android:layout_width="66dp"
            android:layout_height="43dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="454dp"
            android:text="@string/travel" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="422dp"
        android:layout_height="447dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="444dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="396dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView59"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/gogo"
                        android:layout_width="151dp"
                        android:layout_height="138dp"
                        android:background="@drawable/head" />

                    <TextView
                        android:id="@+id/textView33"
                        android:layout_width="211dp"
                        android:layout_height="wrap_content"
                        android:text="@string/actcontenct"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="39dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/likeit"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/p12" />

                    <TextView
                        android:id="@+id/textView35"
                        android:layout_width="42dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/wantjoin"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/p11" />

                    <TextView
                        android:id="@+id/textView36"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/comment"
                        android:layout_width="47dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/p10" />

                    <TextView
                        android:id="@+id/textView37"
                        android:layout_width="53dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="399dp"
                    android:layout_height="158dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView61"
                        android:layout_width="54dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="       " />

                    <Button
                        android:id="@+id/gotosignup"
                        android:layout_width="151dp"
                        android:layout_height="129dp"
                        android:background="@drawable/head" />

                    <TextView
                        android:id="@+id/actcontent2"
                        android:layout_width="217dp"
                        android:layout_height="79dp"
                        android:text="@string/actcontenct"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="412dp"
                    android:layout_height="102dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" " />

                    <Button
                        android:id="@+id/likebtn"
                        android:layout_width="28dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/p12" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" " />

                    <Button
                        android:id="@+id/applycounts"
                        android:layout_width="20dp"
                        android:layout_height="65dp"
                        android:layout_weight="1"
                        android:background="@drawable/p11" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" " />

                    <Button
                        android:id="@+id/talkbtn"
                        android:layout_width="16dp"
                        android:layout_height="62dp"
                        android:layout_weight="1"
                        android:background="@drawable/p10" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="  " />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="59dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <include layout="@layout/bottom_bar" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>